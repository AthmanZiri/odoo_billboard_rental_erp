<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_site_tree" model="ir.ui.view">
        <field name="name">media.site.list</field>
        <field name="model">media.site</field>
        <field name="arch" type="xml">
            <list string="Sites">
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <field name="road_type"/>
            </list>
        </field>
    </record>

    <record id="view_media_site_form" model="ir.ui.view">
        <field name="name">media.site.form</field>
        <field name="model">media.site</field>
        <field name="arch" type="xml">
            <form string="Site">
                <header>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Site Name"/>
                        </h1>
                        <h3>
                            <field name="code" placeholder="Site Code"/>
                        </h3>
                    </div>
                    <group name="group_main_details">
                        <group name="group_geographic" string="Geographic">
                            <field name="street"/>
                            <field name="city"/>
                            <field name="district"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                            <field name="road_type"/>
                        </group>
                        <group name="group_gps" string="GPS &amp; Maps">
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="google_maps_link" widget="url"/>
                        </group>
                    </group>
                    <notebook name="site_notebook">
                        <page string="Faces" name="faces">
                            <field name="face_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="face_type"/>
                                    <field name="pricing_type"/>
                                    <field name="price_per_month"/>
                                </list>
                            </field>
                        </page>
                        <page string="Permit History" name="permit_history">
                            <field name="permit_history_ids">
                                <list editable="bottom">
                                    <field name="permit_number"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="status"/>
                                    <field name="permit_file" filename="permit_filename" widget="binary"/>
                                    <field name="permit_filename" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Lease History" name="lease_history">
                            <field name="lease_line_ids">
                                <list create="false" edit="false">
                                    <field name="order_id"/>
                                    <field name="order_partner_id"/>
                                    <field name="media_face_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="price_subtotal"/>
                                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'sale'"/>
                                </list>
                            </field>
                        </page>
                        <page string="Photos" name="photos">
                            <field name="image_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- <oe_chatter/> -->
            </form>
        </field>
    </record>

    <record id="action_media_site" model="ir.actions.act_window">
        <field name="name">Sites</field>
        <field name="res_model">media.site</field>
        <field name="view_mode">list,kanban,graph,pivot,form</field>
    </record>
</odoo>
