<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_expense_form" model="ir.ui.view">
        <field name="name">media.expense.form</field>
        <field name="model">media.expense</field>
        <field name="arch" type="xml">
            <form string="Expense">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="amount"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="site_id"/>
                            <field name="media_face_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="expense_file" widget="binary" filename="expense_filename"/>
                        <field name="expense_filename" invisible="1"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" placeholder="Additional details..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_media_expense_tree" model="ir.ui.view">
        <field name="name">media.expense.list</field>
        <field name="model">media.expense</field>
        <field name="arch" type="xml">
            <list string="Expenses">
                <field name="date"/>
                <field name="name"/>
                <field name="category"/>
                <field name="site_id"/>
                <field name="media_face_id"/>
                <field name="amount" sum="Total"/>
            </list>
        </field>
    </record>

    <record id="action_media_expense" model="ir.actions.act_window">
        <field name="name">Asset Expenses</field>
        <field name="res_model">media.expense</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record expenses related to your billboards and canopies.
            </p>
        </field>
    </record>
</odoo>
