<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimalist Search View for Odoo 19 Troubleshooting -->
    <record id="v19_media_face_search_minimal" model="ir.ui.view">
        <field name="name">media.face.search.v19.minimal</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <search string="Search Faces">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- List View -->
    <record id="v19_media_face_list" model="ir.ui.view">
        <field name="name">media.face.list.v19</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <list string="Faces">
                <field name="name"/>
                <field name="code"/>
                <field name="occupancy_status" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="v19_media_face_form" model="ir.ui.view">
        <field name="name">media.face.form.v19</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <form string="Face">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Face Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="site_id"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="occupancy_status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="v19_action_media_face" model="ir.actions.act_window">
        <field name="name">Faces (V19)</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="v19_media_face_search_minimal"/>
    </record>
</odoo>
