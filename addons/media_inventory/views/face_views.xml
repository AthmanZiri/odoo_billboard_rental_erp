<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Minimalist Search View -->
    <record id="view_media_face_search" model="ir.ui.view">
        <field name="name">media.face.search</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <search string="Search Faces">
                <field name="name"/>
                <field name="code"/>
                <field name="site_id"/>
                <filter string="Available" name="filter_available" domain="[('occupancy_status', '=', 'available')]"/>
                <filter string="Reserved" name="filter_reserved" domain="[('is_reserved', '=', True)]"/>
                <filter string="Soon to be Available" name="filter_soon_available" domain="[('is_soon_available', '=', True)]"/>
                <filter string="Expired" name="filter_expired" domain="[('is_expired', '=', True)]"/>
            </search>
        </field>
    </record>

    <!-- Standard List View (Odoo 19 uses <list>) -->
    <record id="view_media_face_tree" model="ir.ui.view">
        <field name="name">media.face.list</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <list string="Faces">
                <field name="name"/>
                <field name="code"/>
                <field name="site_id"/>
                <field name="pricing_type"/>
                <field name="price_per_month" sum="Total Monthly Revenue"/>
                <field name="occupancy_status" widget="badge"/>
            </list>

        </field>
    </record>

    <!-- Standard Form View -->
    <record id="view_media_face_form" model="ir.ui.view">
        <field name="name">media.face.form</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <form string="Face">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rentals" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="rentals_count" widget="statinfo" string="Rentals"/>
                        </button>
                        <button name="action_view_expenses" type="object" class="oe_stat_button" icon="fa-credit-card">
                            <field name="expenses_count" widget="statinfo" string="Expenses"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1><field name="name" placeholder="Face Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="site_id"/>
                            <field name="code"/>
                            <field name="face_type"/>
                        </group>
                        <group>
                            <field name="occupancy_status"/>
                        </group>
                    </group>
                    <notebook name="face_notebook">
                        <page string="General Info" name="general_info">
                            <group>
                                <group string="Dimensions">
                                    <field name="height"/>
                                    <field name="width"/>
                                    <field name="length_m"/>
                                </group>

                                <group string="Pricing">
                                    <field name="pricing_type"/>
                                    <field name="price_per_month" invisible="pricing_type != 'fixed'"/>
                                    <field name="price_per_day" invisible="pricing_type != 'daily'"/>
                                    <field name="price_slot_monthly" invisible="pricing_type != 'slot_monthly'"/>
                                    <field name="price_slot_biweekly" invisible="pricing_type != 'slot_biweekly'"/>
                                    <field name="price_slot_weekly" invisible="pricing_type != 'slot_weekly'"/>
                                    <field name="cpm_rate" invisible="pricing_type != 'cpm'"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Digital Specs" name="digital_specs" invisible="face_type != 'digital'">
                            <group>
                                <group string="Display Information">
                                    <field name="pixel_pitch"/>
                                    <field name="resolution"/>
                                    <field name="refresh_rate"/>
                                    <field name="orientation"/>
                                </group>
                                <group string="Operations">
                                    <field name="operating_hours_start" widget="float_time"/>
                                    <field name="operating_hours_end" widget="float_time"/>
                                    <field name="views_per_day"/>
                                </group>
                                <group string="Content Specifications">
                                    <field name="supported_formats"/>
                                    <field name="content_size_rec"/>
                                </group>
                                <group string="Audience">
                                    <field name="target_audience"/>
                                </group>
                            </group>
                        </page>

                        <page string="Artwork History" name="artwork_history">
                            <field name="lease_line_ids" readonly="1">
                                <list>
                                    <field name="order_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Expenses" name="expenses">
                            <field name="expense_ids" readonly="1">
                                <list>
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="category"/>
                                    <field name="amount" sum="Total"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <oe_chatter/>
            </form>
        </field>
    </record>

    <!-- Standard Actions -->
    <record id="action_media_face" model="ir.actions.act_window">
        <field name="name">Faces</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_media_face_available" model="ir.actions.act_window">
        <field name="name">Available Assets</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('occupancy_status', '=', 'available')]</field>
        <field name="context">{'search_default_filter_available': 1}</field>
    </record>

    <record id="action_media_face_reserved" model="ir.actions.act_window">
        <field name="name">Reserved Assets</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_reserved': 1}</field>
    </record>

    <record id="action_media_face_soon" model="ir.actions.act_window">
        <field name="name">Soon to be Available</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_soon_available': 1}</field>
    </record>

    <record id="action_media_face_expired" model="ir.actions.act_window">
        <field name="name">Expired Leases</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_expired': 1}</field>
    </record>
</odoo>
