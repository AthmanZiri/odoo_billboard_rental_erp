<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_face_form" model="ir.ui.view">
        <field name="name">media.face.form</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <form string="Face">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Face Name"/>
                        </h1>
                    </div>
                    <group name="group_face_main">
                        <group name="group_core">
                            <field name="site_id"/>
                            <field name="code"/>
                            <field name="face_type"/>
                            <field name="product_id" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook name="face_notebook">
                        <page string="General Info" name="general_info">
                            <group>
                                <group name="group_tech_specs" string="Technical Specs">
                                    <field name="height"/>
                                    <field name="width"/>
                                    <field name="illumination_type"/>
                                </group>
                                <group name="group_pricing" string="Pricing">
                                    <field name="pricing_type"/>
                                    <field name="price_per_month" invisible="pricing_type != 'fixed'"/>
                                    <field name="price_per_day" invisible="pricing_type != 'daily'"/>
                                    <field name="cpm_rate" invisible="pricing_type != 'cpm'"/>
                                    <field name="estimated_monthly_impressions" invisible="pricing_type != 'cpm'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Digital Specs" name="digital_specs" invisible="face_type != 'digital'">
                            <group>
                                <group name="digital_specs_core">
                                    <field name="pixel_pitch"/>
                                    <field name="resolution"/>
                                </group>
                                <group name="digital_specs_more">
                                    <field name="refresh_rate"/>
                                    <field name="supported_formats"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <oe_chatter/>
            </form>
        </field>
    </record>

    <record id="view_media_face_tree" model="ir.ui.view">
        <field name="name">media.face.list</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <list string="Faces">
                <field name="name"/>
                <field name="code"/>
                <field name="site_id"/>
                <field name="face_type"/>
                <field name="occupancy_status" widget="badge" decoration-success="occupancy_status == 'available'" decoration-danger="occupancy_status == 'booked'"/>
                <field name="current_booking_start" invisible="occupancy_status != 'booked'"/>
                <field name="current_booking_end" invisible="occupancy_status != 'booked'"/>
            </list>
        </field>
    </record>

    <record id="view_media_face_search" model="ir.ui.view">
        <field name="name">media.face.search</field>
        <field name="model">media.face</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="site_id"/>
                <filter string="Available" name="available" domain="[('occupancy_status', '=', 'available')]"/>
                <filter string="Booked" name="booked" domain="[('occupancy_status', '=', 'booked')]"/>
            </search>
        </field>
    </record>

    <record id="action_media_face" model="ir.actions.act_window">
        <field name="name">Faces</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_media_face_search"/>
    </record>

    <record id="action_media_face_available" model="ir.actions.act_window">
        <field name="name">Available Billboards</field>
        <field name="res_model">media.face</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('occupancy_status', '=', 'available')]</field>
        <field name="context">{'search_default_available': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Ready to be leased!
            </p>
        </field>
    </record>
</odoo>
