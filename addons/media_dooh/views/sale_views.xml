<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_dooh" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.dooh</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='end_date']" position="after">
                <field name="media_slot_id" optional="show" invisible="not media_face_id"/>
            </xpath>
        </field>
    </record>
</odoo>
