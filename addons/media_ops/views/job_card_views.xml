<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_job_card_form" model="ir.ui.view">
        <field name="name">media.job.card.form</field>
        <field name="model">media.job.card</field>
        <field name="arch" type="xml">
            <form string="Job Card">
                <header>
                    <button name="action_assign" string="Assign" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start" string="Start Work" type="object" class="btn-primary" invisible="state != 'assigned'"/>
                    <button name="action_complete" string="Complete" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,assigned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="site_category" invisible="1"/>
                            <field name="job_type_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="maintenance_team_id" options="{'no_create': True}"/>
                            <field name="date" string="Renovation Date"/>
                        </group>
                        <group>
                            <field name="canopy_id" invisible="site_category != 'canopy'"/>
                            <field name="site_id" invisible="site_category == 'canopy'"/>
                            <field name="media_face_id" invisible="site_category == 'canopy'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Canopy Photos" name="canopy_photos">
                            <group>
                                <group string="Before &amp; After">
                                    <field name="old_canopy_photo" widget="image" class="oe_avatar" style="width: 200px; height: 200px;"/>
                                    <field name="new_canopy_photo" widget="image" class="oe_avatar" style="width: 200px; height: 200px;"/>
                                </group>
                                <group string="Documentation">
                                    <field name="damaged_photo" widget="image" class="oe_avatar" style="width: 200px; height: 200px;"/>
                                </group>
                            </group>
                        </page>
                        <page string="Measurements" name="measurement_photos">
                            <group string="Measurement 1">
                                <group>
                                    <field name="old_measurement_image_1" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="Before"/>
                                </group>
                                <group>
                                    <field name="new_measurement_image_1" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="After/New"/>
                                </group>
                            </group>
                            <group string="Measurement 2">
                                <group>
                                    <field name="old_measurement_image_2" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="Before"/>
                                </group>
                                <group>
                                    <field name="new_measurement_image_2" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="After/New"/>
                                </group>
                            </group>
                            <group string="Measurement 3">
                                <group>
                                    <field name="old_measurement_image_3" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="Before"/>
                                </group>
                                <group>
                                    <field name="new_measurement_image_3" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="After/New"/>
                                </group>
                            </group>
                            <group string="Measurement 4">
                                <group>
                                    <field name="old_measurement_image_4" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="Before"/>
                                </group>
                                <group>
                                    <field name="new_measurement_image_4" widget="image" class="oe_avatar" style="width: 150px; height: 150px;" string="After/New"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <group string="Notes">
                        <field name="notes" placeholder="Details of the job..."/>
                    </group>
                </sheet>
                <oe_chatter/>
            </form>
        </field>
    </record>

    <record id="view_media_job_card_tree" model="ir.ui.view">
        <field name="name">media.job.card.list</field>
        <field name="model">media.job.card</field>
        <field name="arch" type="xml">
            <list string="Job Cards">
                <field name="name"/>
                <field name="job_type_id"/>
                <field name="site_id"/>
                <field name="media_face_id"/>
                <field name="maintenance_team_id" string="Assigned Team"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'assigned'" decoration-primary="state == 'in_progress'" decoration-success="state == 'completed'"/>
            </list>
        </field>
    </record>

    <record id="action_media_job_card" model="ir.actions.act_window">
        <field name="name">Job Cards</field>
        <field name="res_model">media.job.card</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_media_job_card_canopy" model="ir.actions.act_window">
        <field name="name">Canopy Repairs &amp; Maintenance</field>
        <field name="res_model">media.job.card</field>
        <field name="domain">[('site_id.site_category', '=', 'canopy')]</field>
        <field name="context">{'default_site_category': 'canopy'}</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="view_media_job_type_tree" model="ir.ui.view">
        <field name="name">media.job.type.list</field>
        <field name="model">media.job.type</field>
        <field name="arch" type="xml">
            <list string="Job Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="action_media_job_type" model="ir.actions.act_window">
        <field name="name">Job Types</field>
        <field name="res_model">media.job.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
