<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_maintenance_team_tree" model="ir.ui.view">
        <field name="name">media.maintenance.team.list</field>
        <field name="model">media.maintenance.team</field>
        <field name="arch" type="xml">
            <list string="Maintenance Teams">
                <field name="name"/>
                <field name="leader_id"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_media_maintenance_team_form" model="ir.ui.view">
        <field name="name">media.maintenance.team.form</field>
        <field name="model">media.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Team Name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Repair Team North"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="leader_id" options="{'no_create': True}"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Members" name="members">
                            <field name="member_ids" context="{'default_is_company': False}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="phone"/>
                                    <field name="email"/>
                                </list>
                            </field>
                        </page>
                        <page string="Description" name="description">
                            <field name="notes" placeholder="Detailed notes about the team..."/>
                        </page>
                    </notebook>
                </sheet>
                <oe_chatter/>
            </form>
        </field>
    </record>

    <record id="action_media_maintenance_team" model="ir.actions.act_window">
        <field name="name">Repair and Maintenance Teams</field>
        <field name="res_model">media.maintenance.team</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Maintenance Team!
            </p>
            <p>
                Manage groups of employees and partners who handle repairs and maintenance.
            </p>
        </field>
    </record>
</odoo>
