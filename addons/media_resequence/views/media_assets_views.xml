<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Billboard Tree View Inheritance -->
    <record id="view_media_billboard_tree_inherit_resequence" model="ir.ui.view">
        <field name="name">media.billboard.tree.inherit.resequence</field>
        <field name="model">media.billboard</field>
        <field name="inherit_id" ref="media_inventory.view_media_billboard_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sequence" widget="handle"/>
            </xpath>
        </field>
    </record>

    <!-- Canopy Tree View Inheritance -->
