<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_rental_tree" model="ir.ui.view">
        <field name="name">media.rental.list</field>
        <field name="model">media.rental</field>
        <field name="arch" type="xml">
            <list string="Rentals">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'active'"/>
            </list>
        </field>
    </record>

    <record id="view_media_rental_calendar" model="ir.ui.view">
        <field name="name">media.rental.calendar</field>
        <field name="model">media.rental</field>
        <field name="arch" type="xml">
            <calendar string="Rentals" date_start="start_date" date_stop="end_date" color="partner_id" mode="month">
                <field name="partner_id"/>
                <field name="name"/>
                <field name="state" filters="1"/>
            </calendar>
        </field>
    </record>

    <record id="view_media_rental_form" model="ir.ui.view">
        <field name="name">media.rental.form</field>
        <field name="model">media.rental</field>
        <field name="arch" type="xml">
            <form string="Rental Contract">
                <header>
                    <button name="action_confirm" string="Confirm &amp; Create Quotation" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-usd" invisible="not sale_order_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Sale Order</span>
                            </div>
                        </button>
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-pencil-square-o" invisible="invoice_count == 0">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money" invisible="payment_count == 0">
                            <field name="payment_count" widget="statinfo" string="Payments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group name="client_info">
                            <field name="partner_id" readonly="state != 'draft'"/>
                            <field name="sale_order_id" widget="res_partner_many2one" readonly="1" invisible="1"/>
                            <field name="available_face_ids" invisible="1"/>
                        </group>
                        <group name="dates">
                            <field name="start_date" readonly="state != 'draft'"/>
                            <field name="end_date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Billboards &amp; Artwork" name="lines">
                            <group>
                                <field name="face_selection_ids" widget="many2many_tags" 
                                       placeholder="Add Billboards..."
                                       readonly="state != 'draft'"
                                       options="{'no_create': True}"/>
                            </group>
                            <field name="rental_line_ids" readonly="state != 'draft'" context="{'default_rental_id': id}">
                                <list editable="bottom">
                                    <field name="site_id"/>
                                    <field name="face_id" domain="[('id', 'in', parent.available_face_ids)]" options="{'no_create': True}"/>
                                    <field name="price_unit"/>
                                    <field name="artwork_file" widget="binary" filename="artwork_filename" string="Graphic"/>
                                    <field name="artwork_filename" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <oe_chatter/>
            </form>
        </field>
    </record>

    <record id="action_media_rental" model="ir.actions.act_window">
        <field name="name">Rentals</field>
        <field name="res_model">media.rental</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first billboard rental contract!
            </p>
        </field>
    </record>
</odoo>
