<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_media" model="ir.ui.view">
        <field name="name">account.move.form.inherit.media</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="lease_start_date" invisible="move_type not in ('out_invoice', 'out_refund')"/>
                <field name="lease_end_date" invisible="move_type not in ('out_invoice', 'out_refund')"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='product_id']" position="before">
                <field name="media_face_id" optional="show"/>
                <field name="media_digital_screen_id" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='name']" position="after">
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="artwork_file" widget="image" options="{'size': [64, 64], 'zoom': true}" optional="show"/>
                <field name="artwork_filename" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
