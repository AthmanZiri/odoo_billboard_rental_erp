<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_media_site_form_inherit_finance" model="ir.ui.view">
        <field name="name">media.site.form.inherit.finance</field>
        <field name="model">media.site</field>
        <field name="inherit_id" ref="media_inventory.view_media_site_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_pending_invoices" type="object" class="oe_stat_button" icon="fa-pencil-square-o">
                    <field name="pending_invoice_count" widget="statinfo" string="Unpaid Inv."/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Financials" name="financials">
                    <group name="group_financials">
                        <field name="pending_invoice_count"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
