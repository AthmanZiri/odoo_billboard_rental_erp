<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_monthly_billing" model="ir.cron">
        <field name="name">Billboard Rental: Monthly Billing</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_monthly_invoices()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>

    <record id="ir_cron_contract_expiry_reminder" model="ir.cron">
        <field name="name">Billboard Rental: Contract Expiry Reminder</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model._cron_contract_expiry_reminder()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
